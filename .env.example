# ===================================
# APPLICATION CONFIGURATION
# ===================================
VITE_APP_NAME=Our Lady Of Sorrows Shrine
VITE_APP_DESCRIPTION=A Sacred Place of Prayer and Pilgrimage
VITE_APP_VERSION=1.0.0

# ===================================
# SHRINE INFORMATION
# ===================================
VITE_SHRINE_NAME=Martyr St.Devashayam Shrine
VITE_SHRINE_ADDRESS=Mount Devasahayam, Pilgrimage Road, Tamil Nadu, India
VITE_SHRINE_PHONE=+91 89037 60869
VITE_SHRINE_EMAIL=info@devasahayammountshrine.com

# ===================================
# SOCIAL MEDIA LINKS
# ===================================
VITE_FACEBOOK_URL=https://www.facebook.com/DVmount
VITE_YOUTUBE_URL=https://www.youtube.com/@devasahayammountshrine5677
VITE_INSTAGRAM_URL=https://www.instagram.com/popular/devasahayam-mount/

# ===================================
# MAP CONFIGURATION
# ===================================
